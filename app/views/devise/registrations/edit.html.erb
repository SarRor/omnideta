<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">E-mail</label>
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail3" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Contraseña nueva</label>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputPassword3", placeholder:"6 caracteres mínimo (si no desea cambiarla, DEJAR EN BLANCO éste espacio)" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputPasswordConf3" class="col-sm-2 col-form-label">Confirmación de contraseña</label>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputPasswordConf3" %>
    </div>
  </div>


  <div class="form-group row">
    <label for="inputPasswordCur3" class="col-sm-2 col-form-label">Contraseña actual</label>
    <div class="col-sm-10">
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", id:"inputPasswordCur3", placeholder:"Se necesita para realizar cambios" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= f.submit "Actualizar", class:"btn btn-primary" %>
    </div>
  </div>

<% end %>

<h3>Cancelar mi cuenta</h3>

<p><%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete %></p>

<%= link_to "Atrás", :back %>
